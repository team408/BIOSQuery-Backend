<%- include('partials/header') %>
<link rel="stylesheet" href="/css/admin_panel.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="container">
    <h1 class="text-center mt-4 mb-4">Admin Panel for Network Scans</h1>

    <!-- Scheduled Scans Section -->
    <div class="card">
        <div class="card-header">
            Scheduled Network Scans
        </div>
        <div class="card-body">
            <form action="/admin-panel/schedule-scan" method="POST">
                <div class="mb-3">
                    <label for="frequency" class="form-label">Scan Frequency</label>
                    <select class="form-select" id="frequency" name="frequency" required>
                        <option value="daily">Daily</option>
                        <option value="weekly">Weekly</option>
                        <option value="monthly">Monthly</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="time" class="form-label">Scan Time</label>
                    <input type="time" class="form-control" id="time" name="time" required>
                </div>

                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="enableScans" name="enableScans" checked>
                    <label class="form-check-label" for="enableScans">Enable Automatic Scans</label>
                </div>

                <button type="submit" class="btn btn-primary">Save Settings</button>
            </form>
        </div>
    </div>

    <!-- Module Management Section -->
    <div class="card">
        <div class="card-header">
            Module Management
        </div>
        <div class="card-body">
            <form action="/admin-panel/manage-modules" method="POST">
                <div class="mb-3">
                    <label for="modules" class="form-label">Select Modules to Run</label>
                    <select multiple class="form-select" id="modules" name="modules[]" required>
                        <% modules.forEach(function(module) { %>
                        <option value="<%= module.id %>"><%= module.name %></option>
                        <% }); %>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="excludedModules" class="form-label">Exclude Specific Modules</label>
                    <select multiple class="form-select" id="excludedModules" name="excludedModules[]">
                        <% modules.forEach(function(module) { %>
                        <option value="<%= module.id %>"><%= module.name %></option>
                        <% }); %>
                    </select>
                </div>

                <button type="submit" class="btn btn-success">Update Modules</button>
            </form>
        </div>
    </div>
</div>

<script src="/js/admin_panel.js"></script>
<%- include('partials/footer') %>
