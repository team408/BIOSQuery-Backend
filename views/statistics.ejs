<%- include('partials/header') %>

<link rel="stylesheet" href="/css/statistics.css">
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OSQuery Endpoint Script Execution</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <h1>OSQuery Endpoint Script Execution</h1>
    
    <div id="chart-container">
        <div id="status-chart-container" class="chart-container">
            <h2>Script Execution Status</h2>
            <canvas id="status-chart"></canvas>
        </div>

        <div id="script-chart-container" class="chart-container">
            <h2>Most Frequently Executed Scripts</h2>
            <canvas id="script-chart"></canvas>
        </div>
    </div>

    <div id="script-list">
        <!-- Script list will be dynamically populated -->
    </div>

    <h2>Timeline of Scripts Executed on Each Endpoint</h2>
    <table>
        <thead>
            <tr>
                <th>Endpoint</th>
                <th>Script</th>
                <th>Execution Time</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            <% if (data.length > 0) { %>
                <% data.forEach(item => { %>
                    <tr>
                        <td><%= item.endpoint %></td>
                        <td><%= item.script %></td>
                        <td><%= item.execution_time %></td>
                        <td class="status-<%= item.status %>"><%= item.status %></td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="4">No data available</td>
                </tr>
            <% } %>
        </tbody>
    </table>

    <!-- Hidden container to pass data to JavaScript -->
    <div id="data-container" style="display:none;"><%- JSON.stringify(data) %></div>

    <script src="/js/statistics.js"></script>
    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

<%- include('partials/footer') %>