<%- include('partials/header') %>
<link rel="stylesheet" href="/css/risks.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="container mt-4">
    <h1 class="text-center mb-5">Host Risk Assessment</h1>

    <div class="row mb-4">
        <div class="col-md-6">
            <a href="/risks/mitigation" class="btn btn-primary btn-lg btn-block">
                <i class="fas fa-shield-alt"></i> View Mitigation Advices
            </a>
        </div>
        <div class="col-md-6">
            <a href="/risks/download" class="btn btn-success btn-lg btn-block">
                <i class="fas fa-download"></i> Download CSV Report
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Host</th>
                            <th>Risk Level</th>
                            <th>IP Address</th>
                            <th>MAC Address</th>
                            <th>OS Platform</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% risks.forEach(function(risk) { %>
                            <tr class="risk-row" data-risk="<%= risk.risk.toLowerCase() %>">
                                <td><%= risk.host %></td>
                                <td>
                                    <span class="badge rounded-pill bg-<%= risk.risk.toLowerCase() %>">
                                        <%= risk.risk %>
                                    </span>
                                </td>
                                <td><%= risk.ip %></td>
                                <td><%= risk.mac %></td>
                                <td><%= risk.os %></td>
                                <td>
                                    <button class="btn btn-sm btn-info info-btn" data-host-id="<%= risk.hostId %>" data-bs-toggle="tooltip" title="<%= risk.details %>">
                                        <i class="fas fa-info-circle"></i> Info
                                    </button>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="scriptModal" tabindex="-1" aria-labelledby="scriptModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="scriptModalLabel">Script Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Script</th>
                            <th>Execution Time</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody id="scriptDetails">
                        <!-- Script details will be appended here -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function(){
        $('[data-bs-toggle="tooltip"]').tooltip();
        
        // Function to format the date
        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleString('en-US', {
                year: 'numeric',
                month: 'short',
                day: '2-digit',
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit',
                hour12: false
            });
        }

        // Info button click event
        $('.info-btn').click(async function() {
            const hostId = $(this).data('host-id');
            if (!hostId) {
                console.error('Host ID is not defined.');
                return;
            }
            try {
                const response = await fetch(`/api/hosts/${hostId}/scripts`);
                if (!response.ok) {
                    throw new Error(`HTTP error! Status: ${response.status}`);
                }
                const scripts = await response.json();
                let scriptDetails = '';
                scripts.forEach(script => {
                    const formattedTime = script.execution_time ? formatDate(script.execution_time) : 'N/A';
                    scriptDetails += `
                        <tr>
                            <td>${script.script}</td>
                            <td>${formattedTime}</td>
                            <td>${script.status}</td>
                        </tr>
                    `;
                });

                $('#scriptDetails').html(scriptDetails);
                $('#scriptModal').modal('show');
            } catch (error) {
                console.error('Error fetching scripts:', error);
            }
        });
    });
</script>

<%- include('partials/footer') %>