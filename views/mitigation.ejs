<%- include('partials/header') %>
<link rel="stylesheet" href="/css/risks.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="container mt-4">
    <div class="text-center mb-4">
        <h1>Mitigation Advices</h1>
    </div>
    
    <div class="mb-4">
        <a href="/risks" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left"></i> Back to All Risks
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Risk</th>
                            <th>Mitigation Advice</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% advices.forEach(function(advice) { %>
                            <tr>
                                <td><%= advice.risk %></td>
                                <td><%= advice.advice %></td>
                               
                                <td>
                                    <button class="btn btn-sm btn-warning mitigation-btn">
                                        Mark as Mitigated
                                    </button>
                                </td>
                                
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('.mark-mitigated').forEach(button => {
            button.addEventListener('click', async function() {
                const risk = this.getAttribute('data-risk');
                
                try {
                    const response = await fetch('/api/risks/mark-mitigated', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ risk }),
                    });

                    if (response.ok) {
                        this.innerHTML = '<i class="fas fa-check-circle"></i> Mitigated';
                        this.classList.remove('btn-success');
                        this.classList.add('btn-secondary');
                        this.disabled = true;
                    } else {
                        console.error('Failed to mark risk as mitigated');
                    }
                } catch (error) {
                    console.error('Error marking risk as mitigated:', error);
                }
            });
        });
    });
</script>
<script>
    $(document).ready(function() {
        // Toggle mitigation status on button click
        $('.mitigation-btn').click(function() {
            let btn = $(this);
            if (btn.hasClass('mitigated')) {
                btn.removeClass('mitigated').text('Mark as Mitigated');
            } else {
                btn.addClass('mitigated').text('Mitigated');
            }
        });
    });
</script>


<%- include('partials/footer') %>
